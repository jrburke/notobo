#!/usr/bin/env node
/*jslint node: true */

var args = [].splice.call(process.argv, 2);

if (args.length < 1 || args.length > 3) {
  console.log('Usage: notobo path/to/file/with/amd/config.js path/to/node_modules');
  process.exit(1);
} else {
  (require('../index'))(args[0], args[1], function(error) {
    if (error) {
      console.error(error);
      process.exit(1);
    }
  });
}
